<div class="main-container">
	<div class="centered-container">
		<div class="schools-container">
			<h1>Top 10 Schools</h1>
			 <%@top_ten_schools.each do |school|%>
			 <div class="school-label">
			 	<%=school[0]%>
			 </div>
			 	<%if school[1] > 100%>
				 	<div class="school-bar grow" style="width:<%=(school[1] * 2.5)%>px; height:40px">
				 		<h4 class="bar-text"><%=school[1]%> friends / <%=(((school[1].to_f/@total_friends).round(2) * 100).round(0))%>% of your friends</h4>
				 	</div><br>
				<%else%>
					<div class="school-bar grow" style="width:100px; height:40px">
				 		<h4 class="bar-text"><%=school[1]%> / <%=(((school[1].to_f/@total_friends).round(2) * 100).round(0))%>%</h4>
				 	</div><br>
				<%end%>
			 <%end%>
		</div>
	</div>
</div>