<div class="main-container">
	<div class="centered-container">
		<div class="schools-container">
			<h1>Top 10 Cities</h1>
			 <%@top_ten_locations.each do |city|%>
			 <div class="school-label">
			 	<%=city[0]%>
			 </div>
			 	<%if city[1] > 100%>
				 	<div class="school-bar grow" style="width:<%=(city[1] * 2.5)%>px; height:40px">
				 		<h4 class="bar-text"><%=city[1]%> friends / <%=(((city[1].to_f/@total_friends).round(2) * 100).round(0))%>% of your friends</h4>
				 	</div><br>
				<%else%>
					<div class="school-bar grow" style="width:100px; height:40px">
				 		<h4 class="bar-text"><%=city[1]%> / <%=(((city[1].to_f/@total_friends).round(2) * 100).round(0))%>%</h4>
				 	</div><br>
				<%end%>
			 <%end%>
		</div>
	</div>
</div>